    <section>
    <div class="conteudo">
        <!--  CARROSSEL  -->
        <div class="carousel">
        <div class="slides">
            <% destaquesC.forEach((obra, i) => { %>
            <a href="/obras/<%= obra.id %>" class="slide" data-index="<%= i %>">
                <img src="<%= obra.foto %>" alt="Capa de <%= obra.nome %>">
                <div class="overlay">
                <h2><%= obra.nome %></h2>
                <p><%= obra.art %></p>
                </div>
            </a>
            <% }) %>
        </div>

        <!-- botões de navegação -->
        <button class="carrossel-btn carrossel-prev" aria-label="Anterior">&#8592;</button>
        <button class="carrossel-btn carrossel-next" aria-label="Próximo">&#8594;</button>
        </div>
    </div>

    <!--  SCRIPT que faz o looping infinito  -->
    <script>
        // script (dentro do <script> no final da seção)
        (() => {
        const slidesEl = document.querySelector(".slides");
        const slides   = document.querySelectorAll(".slide");
        const prevBtn  = document.querySelector(".carrossel-prev");
        const nextBtn  = document.querySelector(".carrossel-next");

        let idx   = 0;
        const MAX = slides.length;

        const update = () =>
            slidesEl.style.transform = `translateX(-${idx * 100}%)`;

        prevBtn.addEventListener("click", () => {
            idx = (idx - 1 + MAX) % MAX;
            update();
        });

        nextBtn.addEventListener("click", () => {
            idx = (idx + 1) % MAX;
            update();
        });
        })();
    </script>
    </section>

