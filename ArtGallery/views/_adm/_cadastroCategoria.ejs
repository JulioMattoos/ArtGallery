<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="icon" href="/uploads/icon-ag.svg" type="image/x-icon" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/adm.css" />
  </head>
  <body>
    <div class="topo-logo">
      <a href="../">
        <h1>ArtGallery</h1>
        <p>Administrativo</p>
      </a>
    </div>

    <% if(menssagem == "erro") { %>
    <div class="retorno">
      <div class="retorno-container" id="erro">Erro ao cadastrar dados.</div>
    </div>
    <script>
      setTimeout(() => {
        window.location.href = "/adm/obras/";
      }, 3000);
    </script>
    <% } else { %>
    <section>
        <div class="conteudo">
            <div class="cadastros">
                <div class="cadastros-tit">
                    <h1>CADASTRO DE CATEGORIA</h1>
                </div>
                <div class="cadastros-entradas">
                    <form action="/adm/cadastrar/categoria" method="post" enctype="multipart/form-data">
                        <div class="entrada">
                            <label for="categoria">Categoria</label>
                            <input type="text" id="categoria" name="categoria" placeholder="Categoria" required>
                        </div>
                        <div class="entrada">
                            <label for="descricao">Descricao</label>
                            <input type="textarea" id="descricao" name="descricao" placeholder="Descricao" required>
                        </div>
                        <div>
                          <label for="foto">
                            <% if (dados.foto) { %>
                              <img id="preview-img" src="<%= dados.foto %>" alt="Foto de Perfil" class="img-preview"/>
                            <% } else { %>
                              <div class="img-placeholder">+</div>
                            <% } %>
                            <span class="label-foto">CARREGAR FOTO</span>
                            <input type="file" name="foto" id="foto" accept="image/*" onchange="previewImagem(this)" hidden />
                          </label>
                        </div>
                        <div class="envio">
                            <input type="submit" value="CADASTRAR CATEGORIA">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <% } %>
    <section>
      <a href="/adm/" class="votlar" style="color: #fff">Voltar ao Dashboard</a>
    </section>
    <br />
  </body>
</html>
